<h2 class="mb-4">
  <% if @range == "User" %>
    Users search for "<%= @word %>"
  <% elsif @range == "Book" %>
    Books search for "<%= @word %>"
  <% end %>
</h2>

<% logger.debug "@users: #{@users.inspect}" %>
<% logger.debug "@books: #{@books.inspect}" %>


<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% if @range == "User" %>
      <% @users.each do |user| %>
        <% user.books.each do |book| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      <% end %>

    <% elsif @range == "Book" %>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>

    <% else %>
      <tr>
        <td colspan="3">Records not found</td>
      </tr>
    <% end %>
  </tbody>
</table>


