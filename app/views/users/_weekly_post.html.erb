<h2 class="mt-5 mb-4">７日間分の投稿数</h2>

<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered text-center">
      <thead class="table-light">
        <tr>
          <% @daily_counts.each do |entry| %>
            <th><%= entry[:date] %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @daily_counts.each do |entry| %>
            <td><%= entry[:count] %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>


