<canvas id="booksChart"></canvas>

<script>
  $(document).on('turbolinks:load', function() {
    var ctx = document.getElementById("booksChart");
    var booksChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
        datasets: [
          {
            label: '投稿した本の数',
            data: [
              <%= @books.created_6day_ago.count %>,
              <%= @books.created_5day_ago.count %>,
              <%= @books.created_4day_ago.count %>,
              <%= @books.created_3day_ago.count %>,
              <%= @books.created_2day_ago.count %>,
              <%= @books.created_yesterday.count %>,
              <%= @books.created_today.count %>
            ],
            borderColor: 'blue',
            tension: 0.4,
            BackgroundColor: 'rgba(0,0,0,0)'
          }
        ],
      },
      options: {
        title: {
          display: true,
          text: '7日間の投稿数の比較'
        },
        responsive: true,
        scales: {
          y: {
            suggestedMin: 0,
            suggestedMax: 10
          },
        },
      } 
    });
  });
</script>